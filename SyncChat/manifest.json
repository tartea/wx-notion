{
    "manifest_version": 3,
    "name": "SyncChat",
    "description": "方便同步微信读书的想法到notion",
    "version": "1.0.0",
    "icons": {
        "16": "logo/logo-16.png",
        "48": "logo/logo-48.png",
        "128": "logo/logo-128.png"
    },
    "options_page": "index.html",
    "options_ui":
    {
      "page": "index.html",
      "open_in_tab": true
    },
    "action": {
        "default_title": "SyncWeChatIdea"
    },
    "permissions": ["storage","cookies"],
    "host_permissions": [
        "*://weread.qq.com/","*://i.weread.qq.com/","*://api.notion.com/"
    ],
    "background": {
        "service_worker": "service-worker.js"
    },
    "content_scripts": [{
        "js": ["foreground.js"],
        "matches": ["https://github.com/*"]
    }]
}
